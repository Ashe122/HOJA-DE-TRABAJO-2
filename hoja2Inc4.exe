#include <iostream>
using namespace std;

int main() {
    // Mensaje de bienvenida
    cout << "--Hola Personita, verificaremos si eres mayor de edad.--" << endl;

    // Declaración de variable para almacenar la edad ingresada por el usuario
    int edad;

    // Solicitar al usuario que ingrese su edad
    cout << "Por favor, ingresa tu edad: ";
    cin >> edad;

    // Se verifica si es mayor de edad
    if (edad >= 18) {
        // Mensaje si es mayor de edad
        cout << "Felicidades. Eres mayor de edad." << endl;
    } else {
        // Mensaje si es menor de edad
        cout << "Lo siento. Al parecer eres aún menor de edad." << endl;
    }

    return 0; // Indica que el programa se ejecutó correctamente
}
